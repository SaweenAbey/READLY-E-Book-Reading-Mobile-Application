<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HomePage">

    <ScrollView
        android:id="@+id/scrollMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="88dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/ButtonColor"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/imgDesc"
                    android:src="@drawable/maleprofile" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/hi_sawee"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@string/imgDesc"
                    android:src="@drawable/noti"
                    app:tint="@android:color/white" />
            </LinearLayout>

            <!-- Optional tagline -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/find_your_favourite_book"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- For You -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:text="@string/for_you"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <HorizontalScrollView
                android:id="@+id/horiForYou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:id="@+id/lostCompass"
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="@string/imgDesc"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ross_compass" />

                    <ImageView
                        android:id="@+id/lordRing"
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="@string/imgDesc"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lord" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/imgDesc"
                        android:src="@drawable/th" />

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Trending -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:text="@string/trending"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <HorizontalScrollView
                android:id="@+id/horiTrending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="111dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/imgDesc"
                        android:src="@drawable/book_nigh" />

                    <ImageView
                        android:layout_width="111dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/imgDesc"
                        android:src="@drawable/op" />

                    <ImageView
                        android:layout_width="111dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/imgDesc"
                        android:src="@drawable/fury" />

                    <ImageView
                        android:layout_width="111dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beach"
                        android:contentDescription="@string/imgDesc" />

                    <ImageView
                        android:layout_width="111dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/imgDesc"
                        android:src="@drawable/wedding" />
                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:text="@string/new_arrivals"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/horiNewArrivals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <!-- replace drawables with your latest covers -->
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/b1"
                        android:contentDescription="@string/imgDesc" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/b2"
                        android:contentDescription="@string/imgDesc" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/b3"
                        android:contentDescription="@string/imgDesc" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Editors Pick -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:text="Editors Pick"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/horiEditorsPick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/b4"
                        android:contentDescription="@string/imgDesc" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/b5"
                        android:contentDescription="@string/imgDesc" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/op"
                        android:contentDescription="@string/imgDesc" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemRippleColor="@color/nav_ripple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintBottomNav" />


</androidx.constraintlayout.widget.ConstraintLayout>
