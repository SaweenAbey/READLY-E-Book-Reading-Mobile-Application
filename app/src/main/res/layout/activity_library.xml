<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Library">

    <!-- TOP/BODY SCROLLER -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollBody"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Header -->

            <!-- Books grid -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="377dp"
                android:layout_height="73dp">

                <TextView
                    android:id="@+id/topBar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/ic_arrow_back_24"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:navigationContentDescription="@string/back"
                    app:navigationIcon="@drawable/ic_arrow_back_24"
                    app:titleCentered="false"
                    app:titleTextColor="@color/black" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:paddingBottom="12dp"
                android:text="@string/library"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <GridLayout
                android:id="@+id/gridBooks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:useDefaultMargins="false"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false">

                <!-- Each book item (2 columns, same width).
                     Keep height fixed for consistent rows. -->
                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_gravity="fill_horizontal"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/imgDesc"
                    app:srcCompat="@drawable/fury" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_gravity="fill_horizontal"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/imgDesc"
                    app:srcCompat="@drawable/op" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_gravity="fill_horizontal"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/imgDesc"
                    app:srcCompat="@drawable/ross_compass" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_gravity="fill_horizontal"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/imgDesc"
                    app:srcCompat="@drawable/b1" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_gravity="fill_horizontal"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/imgDesc"
                    app:srcCompat="@drawable/book_nigh" />

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="12dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/imgDesc"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/b5"
                    tools:ignore="ImageContrastCheck" />

                <!-- Add more ImageViews the same way if needed -->
            </GridLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BOTTOM NAVIGATION -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:itemRippleColor="@color/nav_ripple"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintBottomNav" />

</androidx.constraintlayout.widget.ConstraintLayout>
